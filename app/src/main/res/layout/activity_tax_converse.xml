<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaxConverseActivity">

    <EditText
        android:id="@+id/input_text"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="input RMBï¿¥"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/dollar_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="DOLLAR"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="@+id/show_test"
        app:layout_constraintStart_toStartOf="@+id/show_test"
        app:layout_constraintTop_toBottomOf="@+id/show_test" />

    <Button
        android:id="@+id/euro_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="EURO"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="@+id/won_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/won_btn"
        app:layout_constraintTop_toBottomOf="@+id/won_btn" />

    <TextView
        android:id="@+id/show_test"
        android:layout_width="162dp"
        android:layout_height="31dp"
        android:layout_marginBottom="588dp"
        android:gravity="center"
        android:text="Hello"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_text"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/input_text" />

    <Button
        android:id="@+id/won_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="WON"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dollar_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dollar_btn"
        app:layout_constraintTop_toBottomOf="@+id/dollar_btn"
        app:layout_constraintVertical_bias="0.074" />

    <Button
        android:id="@+id/config_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="@string/config"
        android:onClick="myConverseClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/euro_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/euro_btn"
        app:layout_constraintTop_toBottomOf="@+id/euro_btn"
        app:layout_constraintVertical_bias="0.022" />

</androidx.constraintlayout.widget.ConstraintLayout>